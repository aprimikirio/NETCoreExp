@model List<MVCGame.Models.Square>

<style>
    #container {
        width: 640px;
        height: 480px;
        margin: auto;
        border-style: solid;
        border-width: 1px;
    }
</style>

<div>
    <h3>WELCOME TO @ViewData["RoomID"] ROOM</h3>
    <div id="container">
    </div>
</div>

<form action="/Game/Play" method="post">
    @using (Html.BeginForm())
    {
        for (int i = 0; i < Model.Count(); i++)
        {
            <h4>Square № @(i + 1)</h4>

            @: Id: @Html.EditorFor(m => m[i].Id)
            @: GameId: @Html.EditorFor(m => m[i].GameId)
            @: x: @Html.EditorFor(m => m[i].X)
            @: y: @Html.EditorFor(m => m[i].Y)
            @: edge: @Html.EditorFor(m => m[i].Edge)
        }
        <input type="submit" />
    }
</form>

