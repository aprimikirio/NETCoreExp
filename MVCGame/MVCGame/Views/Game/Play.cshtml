@model List<MVCGame.Models.Square>

<style>
    #container {
        width: 640px;
        height: 480px;
        margin: auto;
        border-style: solid;
        border-width: 1px;
    }
</style>

<div>
    <h3>WELCOME TO @ViewData["RoomID"] ROOM</h3>
    <div id="container">
        <canvas id="mainCanvas" width="640" height="480">
            Canvas
        </canvas>
    </div>
</div>

<script>
    var canvas = document.getElementById("mainCanvas"),
        context = canvas.getContext("2d");
</script>

<form action="/Game/Play" method="post">
    @using (Html.BeginForm())
    {
        for (int i = 0; i < Model.Count(); i++)
        {
        <script>
            context.strokeRect(@Model[i].X, @Model[i].Y, @Model[i].Edge, @Model[i].Edge);
        </script>
        }
        <input type="submit" />
    }
</form>

